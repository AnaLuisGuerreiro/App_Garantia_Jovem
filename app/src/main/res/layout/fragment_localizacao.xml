<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.WhereAreWeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mapa"
            android:layout_width="247dp"
            android:layout_height="227dp"
            android:layout_marginStart="176dp"
            android:layout_marginTop="1dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mapa" />

        <TextView
            android:id="@+id/Subtitle"
            android:layout_width="277dp"
            android:layout_height="178dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="ONDE ESTAMOS"
            android:textColor="@color/green"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/horizontalLine1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="28dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapa" />

        <View
            android:id="@+id/horizontalLine2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button6" />

        <Button
            android:id="@+id/button2"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/montserrat_bold"
            android:text="Emprego"
            android:textAlignment="center"
            android:textColor="#39A934"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalLine1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/montserrat_bold"
            android:text="Educação"
            android:textAlignment="center"
            android:textColor="#39A934"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/montserrat_bold"
            android:text="Formação"
            android:textAlignment="center"
            android:textColor="#39A934"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/montserrat_bold"
            android:text="Estágio"
            android:textAlignment="center"
            android:textColor="#39A934"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/montserrat_bold"
            android:text="Informação e Apoio"
            android:textAlignment="center"
            android:textColor="#39A934"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="237dp"
            android:layout_height="234dp"
            android:layout_marginTop="28dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:srcCompat="@drawable/image3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="238dp"
            android:layout_height="188dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="O TEU FUTURO COMEÇA AQUI!"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/button_vamos_la"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserrat_semibold"
            android:text="VAMOS LÁ"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Spinner
            android:id="@+id/spinner"
            android:textColor="@color/dark_blue"
            android:layout_width="150dp"
            android:layout_height="41dp"
            android:layout_marginTop="156dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>