<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<ScrollView
android:layout_height="800dp"
android:layout_width="match_parent"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="1.0"
tools:layout_editor_absoluteX="-2dp"
android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Views.SelectionMenuActivity">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="235dp"
            android:layout_marginStart="216dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/rapaz_sobre" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="233dp"
            android:layout_height="116dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="ESTAMOS AQUI PARA APOIAR A TUA EMPREGABILIDADE"
            android:textColor="#39A934"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="230dp"
            android:layout_height="132dp"
            android:layout_marginStart="28dp"

            android:fontFamily="@font/montserrat_bold"
            android:text="É um compromisso para que gradualmente e num prazo de 4 meses após o jovem sair do sistema de ensino ou do mercado de trabalho, lhe seja feita uma oferta de emprego, de continuação dos estudos, de formação profissional ou de estágio."
            android:textColor="@color/dark_blue"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="177dp" />

        <View
            android:id="@+id/horizontalLine2"
            android:layout_width="0dp"
            android:layout_height="0.005dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="28dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/como_funciona" />

        <View
            android:id="@+id/horizontalLine3"
            android:layout_width="0dp"
            android:layout_height="0.005dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="28dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_vamos_la" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="237dp"
            android:layout_height="234dp"
            android:layout_marginTop="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalLine2"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@drawable/image3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="238dp"
            android:layout_height="188dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="O TEU FUTURO COMEÇA AQUI!"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_vamos_la"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginTop="204dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserrat_semibold"
            android:text="VAMOS LÁ"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            tools:ignore="MissingConstraints,SmallSp" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="346dp"
            android:layout_height="127dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/montserrat_regular"

            android:text="A Garantia Jovem não é uma garantia de emprego. Mas tem como objetivo dar aos jovens, o mais rapidamente possível, uma oportunidade para apostar na sua qualificação e estar em contacto com o mercado de trabalho, com vista a combater a inatividade e o desemprego dos jovens."
            android:textColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Description" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView38">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Principais objetivos"
                android:textColor="@color/green"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Aumentar as qualificações dos jovens. \nFacilitar a transição para o mercado de trabalho. Reduzir o desemprego jovem."
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="@dimen/text_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="A quem se destina"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Em Portugal, a Garantia Jovem vai apoiar os jovens até aos 29 anos (inclusive), que não estão nem a trabalhar nem inseridos no sistema educativo e formativo."
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="@dimen/text_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="É para ti!"
                android:textColor="@color/orange"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Se tens menos de 30 anos de idade. Se não estás a trabalhar. Se não estás a estudar, em formação ou em estágio."
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="@dimen/text_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Oferecemos"
                android:textColor="@color/pink"
                android:textSize="15sp" />

            <TextView
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="De acordo com as tuas preferências e necessidades a Garantia Jovem oferece-te várias oportunidades ao nível da participação em medidas de ensino, formação e emprego."
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Como Funciona?"
            android:textColor="@color/green"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView4" />

        <TextView
            android:id="@+id/como_funciona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="\t1.\tUma rede de parceiros contacta, informa, orienta e motiva os jovens para participar nas ações da Garantia Jovem.\n\n

\t2.\tParceiros articulam de forma a encaminhar os jovens para as soluções mais adequadas, de acordo com as suas expectativas e necessidades.\n\n
\t3.\tJovens participam sucessivamente nas ações necessárias para completar o seu percurso educativo e profissional até ser integrado no mercado de trabalho."
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView39" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</FrameLayout>