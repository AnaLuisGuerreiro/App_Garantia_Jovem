            <TextView
                android:id="@+id/textView44"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serviço de Emprego do Porto" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="105dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/dark_blue"
                android:text="Morada"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                android:text="R. Guedes de Azevedo, 213, 4049-008 PORTO" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp"
                    android:textColor="@color/dark_blue"
                    android:text="Contactar:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/orange"
                    android:background="@drawable/underline_text"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="220989280"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonNewRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="175dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/montserrat_regular"
            android:text=" + Outro pedido"
            app:cornerRadius="10dp"
            android:textSize="18sp" />
    </LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>
