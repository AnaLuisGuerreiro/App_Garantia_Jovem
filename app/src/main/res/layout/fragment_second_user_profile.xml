                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"
                android:text="O seu pedido está na(o)"
