<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserProfile"
    tools:ignore="ScrollViewCount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/user_profile_icon"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_blue"
            android:text="Filipe Araújo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submited"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="10dp"
                android:minWidth="50dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/dark_blue"
                android:background="@drawable/rounded_button"
                android:elevation="8dp"
                android:text="Submetido"
                android:textSize="13sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/underAnalysis"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="10dp"
                android:minWidth="50dp"
                android:padding="5dp"
                android:textColor="@color/dark_blue"

                android:background="@drawable/rounded_button"
                android:text="Em análise"
                android:textSize="13sp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRequest"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.146"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView3"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"
                    android:textColor="@color/dark_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedido" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginStart="210dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/orange"
                    android:text="Submetido"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    >


                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="17sp"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emprego" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"
                android:text="O seu pedido está na(o)"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centro Emprego Porto" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
