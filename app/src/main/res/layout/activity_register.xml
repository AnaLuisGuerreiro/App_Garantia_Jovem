<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_background"
    android:orientation="vertical"
    tools:context=".Views.Views.RegisterActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65sp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="EstÃ¡s a 2 minutos do teu futuro!"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="18dp"
        android:text="Conta-nos tudo para te podermos ajudar"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:backgroundTint="@color/white"
            android:inputType="text"
            android:hint="Primeiro nome"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/montserrat_regular"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="313dp"
            android:src="@drawable/user_orange_icon"
            />

    </androidx.cardview.widget.CardView>



</LinearLayout>