<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="800dp"
    android:layout_width="400dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0"
    tools:layout_editor_absoluteX="-2dp"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main"
        tools:context=".Views.Views.SelectionMenuActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>


        <ImageView
            android:id="@+id/imageView1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.067"
            tools:ignore="MissingConstraints"
            tools:src="@drawable/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="EMPREGO"
            android:textColor="#39A934"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Subtitle"
            tools:ignore="MissingConstraints"
            android:layout_width="142dp"
            android:layout_height="97dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Também podes conhecer apoios e incentivos para a criação do teu próprio emprego ou empresa."
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Title"
            tools:ignore="MissingConstraints"
            android:layout_width="166dp"
            android:layout_height="129dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="ENCONTRA O EMPREGO CERTO PARA TI"
            android:textSize="25sp" />

        <View
            android:id="@+id/horizontalLine1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="0.005dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="28dp"
            android:background="@android:color/black" />

        <View
            android:id="@+id/horizontalLine2"
            android:layout_width="0dp"
            android:layout_height="0.005dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="28dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <View
            android:id="@+id/horizontalLine3"
            android:layout_width="0dp"
            android:layout_height="0.005dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="28dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_vamos_la" />

        <Button
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalLine1"
            tools:ignore="MissingConstraints"
            android:layout_width="336dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/apoios_contrata_o"
            android:textAlignment="center"
            android:textColor="#39A934"
            android:textColorLink="#3F51B5" />

        <Button
            android:id="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            tools:ignore="MissingConstraints"
            android:layout_width="336dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/cria_o_teu_emprego_ou_empresa"
            android:textAlignment="center"
            android:textColor="#39A934"
            android:textColorLink="#3F51B5" />

        <Button
            android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            tools:ignore="MissingConstraints"
            android:layout_width="336dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/estudar_ou_trabalhar_no_estrangeiro"
            android:textAlignment="center"
            android:textColor="#39A934"
            android:textColorLink="#3F51B5" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="237dp"
            android:layout_height="234dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@drawable/image3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="238dp"
            android:layout_height="188dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="O TEU FUTURO COMEÇA AQUI!"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_vamos_la"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginTop="204dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserrat_semibold"
            android:text="VAMOS LÁ"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            tools:ignore="MissingConstraints,SmallSp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


