<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".Fragments.ContactUs">

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">

        <EditText
            android:backgroundTint="@color/light_grey"
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="18dp"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Nome Completo"

            android:inputType="text"
            tools:ignore="TextFields" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/light_grey"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <EditText
            android:id="@+id/assunto"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:backgroundTint="@color/light_grey"
            android:inputType="text"
            android:hint="Assunto"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/montserrat_regular"
            tools:ignore="TextFields" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_blue"

        android:fontFamily="@font/montserrat_bold"
        android:text="Contactos"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_blue"

        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="55dp"
        android:text="Contacte-nos para questões, sugestões de melhoria ou manifestar interesse em participar na garantia jovem como parceiro!" />

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/light_grey"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            android:backgroundTint="@color/light_grey"
            android:inputType="text"
            android:hint="Endereço de e-mail"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/montserrat_regular"
            tools:ignore="TextFields" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/light_grey"

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <EditText
            android:id="@+id/mensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@color/light_grey"
            android:inputType="textMultiLine"
            android:hint="Expõe a razão de contacto"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/montserrat_regular"
            tools:ignore="TextFields" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="50dp"
        android:text="Enviar"
        app:cornerRadius="10dp" />


</FrameLayout>