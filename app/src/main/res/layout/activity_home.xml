<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.Views.HomeActivity">

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/dark_blue"
        android:text="Estamos aqui para apoiar a tua empregabilidade"
        android:textSize="25dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerCarousel"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="50dp" />


    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/dark_blue"
        android:text="Estamos aqui para apoiar a tua empregabilidade"
        android:textSize="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:width="100dp"
            android:height="100dp"
            android:background="@drawable/button_jobs"
            android:backgroundTint="@null"
            android:text="Emprego"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/button_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:width="100dp"
            android:height="100dp"
            android:background="@drawable/button_jobs"
            android:text="Educação"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_formation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:width="100dp"
            android:height="100dp"
            android:background="@drawable/button_jobs"
            android:text="Formação"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/button_internship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:width="100dp"
            android:height="100dp"
            android:background="@drawable/button_jobs"
            android:text="Estágios"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20dp"
            />
    </LinearLayout>

</LinearLayout>
